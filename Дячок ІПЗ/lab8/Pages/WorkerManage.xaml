<Window
    Background="LightSteelBlue"
    Height="500"
    Title="WorkerManage"
    Width="800"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    x:Class="lab8.Pages.WorkerManage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:lab8.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <ResourceDictionary Source="../styles.xaml" />
    </Window.Resources>

    <Grid Margin="20">
        <Button
            Click="Close"
            Content="Close"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />
        <StackPanel>
            <TextBlock
                FontSize="16"
                FontWeight="Bold"
                Margin="0,0,0,20"
                Text="Інформація про працівника:"
                TextAlignment="Center" />

            <TextBlock FontSize="14" Text="ID:" />
            <TextBlock FontSize="14" Text="{Binding Id}" />

            <TextBlock FontSize="14" Text="Паспортний номер:" />
            <TextBlock
                FontSize="14"
                Margin="0,0,0,10"
                Text="{Binding PassportId}" />

            <TextBlock FontSize="14" Text="Ім'я:" />
            <TextBlock
                FontSize="14"
                Margin="0,0,0,10"
                Text="{Binding Name}" />

            <TextBlock FontSize="14" Text="Години:" />
            <TextBlock
                FontSize="14"
                Margin="0,0,0,10"
                Text="{Binding Hours}" />

            <TextBlock Text="Ціна за годину:" />
            <TextBlock
                FontSize="14"
                Margin="0,0,0,20"
                Text="{Binding PricePerHour}" />
            <Button
                Click="EditWorkerClick"
                Content="Редагувати"
                Height="38"
                Width="168" />
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button
                    Click="PayBonusClick"
                    Content="Нарахувати премію"
                    Height="39"
                    Width="185" />
                <Button
                    Click="PaySalaryClick"
                    Content="Нарахувати зарплату"
                    RenderTransformOrigin="0.61,1.278"
                    Width="177" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>